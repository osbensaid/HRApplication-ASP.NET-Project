@model Employee

@{
    ViewData["Title"] = "Employees Page";
    // Layout = null;
}

<form asp-action="Employees" method="post" class="form-group">
    <h1>Employees Form</h1>
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="col">
            <label asp-for="EmployeeName">Employee Name</label>
            <input asp-for="EmployeeName" class="form-control" placeholder="Enter your full name" />
        </div>
        <div class="col">
            <label asp-for="Department">Department</label>
            <select asp-for="Department" class="form-control">
                <option></option>
                <option value="operations">Operations</option>
                <option value="IT">Information Tech.</option>
                <option value="finance">Finance</option>
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <label asp-for="EmailAddress">Email Address</label>
            <input asp-for="EmailAddress" type="email"  class="form-control" />
        </div>
        <div class="col">
            <label asp-for="JobTitle">Job Title</label>
            <input asp-for="JobTitle" class="form-control"  />
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <label asp-for="BirthDay">Birth of Day</label>
            <input asp-for="BirthDay" type="date" class="form-control" />
        </div>


    </div>
    <div class="form-check form-check-inline">
        <label asp-for="isActive" class="form-check-label">Is Active?</label>
        <input type="checkbox" asp-for="isActive" class="form-check-input" />
        
    </div>
    <div>
        <button class="btn btn-primary">Save</button>
    </div>

</form>
